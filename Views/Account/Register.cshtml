@model AgriEnergyConnect.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-success text-white text-center">
                    <h3 class="font-weight-light my-2">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" id="inputEmail" placeholder="name@example.com" />
                            <label for="inputEmail" class="form-label">@Html.DisplayNameFor(m => m.Email)</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Password" />
                            <label for="inputPassword" class="form-label">@Html.DisplayNameFor(m => m.Password)</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="inputConfirmPassword" placeholder="Confirm Password" />
                            <label for="inputConfirmPassword" class="form-label">@Html.DisplayNameFor(m => m.ConfirmPassword)</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <select asp-for="Role" class="form-select" id="inputRole">
                                <option value="" selected disabled>Select a role</option>
                                <option value="Farmer">Farmer</option>
                                <option value="Employee">Employee</option>
                            </select>
                            <label for="inputRole" class="form-label">@Html.DisplayNameFor(m => m.Role)</label>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-block">Register</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="#">Already have an account? Login!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}